<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">

    <application>
        <resource-bundle>
            <base-name>filtered.version</base-name>
            <var>version</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>org.moonwave.locale.Labels</base-name>
            <var>label</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>org.moonwave.locale.Messages</base-name>
            <var>message</var>
        </resource-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>zh</supported-locale>
            <supported-locale>es</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <message-bundle>
            org.moonwave.locale.Messages
        </message-bundle>
    </application>

        <!-- 
    <lifecycle>
        <phase-listener>org.moonwave.util.IECompatibilityFilter</phase-listener>
    </lifecycle>
         -->

</faces-config>
